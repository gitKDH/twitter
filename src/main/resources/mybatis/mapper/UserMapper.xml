<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hyun.twitter.mapper.UserMapper">
    <insert id="addUser" parameterType="com.hyun.twitter.entity.User">
        insert into Users
        (user_id,
         username,
         bio,
         email,
         password,
         created_at,
         role)
        values(
               #{userId},
               #{username},
               #{bio},
               #{email},
               #{password},
               #{createdAt},
               #{role}
              )
    </insert>
</mapper>


